{
  "name": "mathematics-study-platform",
  "version": "1.0.0",
  "description": "Mathematics Study Platform - Desktop App",
  "main": "electron-main.js",
  "scripts": {
    "electron": "electron .",
    "electron:build": "electron-builder",
    "electron:dist": "electron-builder --dir"
  },
  "build": {
    "appId": "com.mathstudy.app",
    "productName": "Mathematics Study Platform",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "electron-main.js", 
      "electron-preload.js",
      "package.json",
      "server/**/*",
      "shared/**/*",
      "sube-seccion/**/*",
      "attached_assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable", 
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}