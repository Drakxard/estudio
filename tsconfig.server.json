  {
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "rootDir": ".",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["shared/*"]
      },
      "lib": ["esnext"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "noEmitOnError": false,
      "allowImportingTsExtensions": false
    },
    "include": ["server/**/*", "shared/**/*,","vite.config.ts"],
    "exclude": ["node_modules", "client", "**/*.test.ts"]
  }
