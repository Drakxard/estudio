{
  "appId": "com.mathstudy.app",
  "productName": "Mathematics Study Platform",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "electron-simple.js",
    "package.json",
    "server/**/*",
    "shared/**/*",
    "sube-seccion/**/*",
    "attached_assets/**/*",
    {
      "from": "node_modules",
      "to": "node_modules",
      "filter": [
        "**/*",
        "!**/test/**",
        "!**/*.md",
        "!**/example/**",
        "!**/examples/**"
      ]
    }
  ],

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
"icon": "icon.ico"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/assets/icon.icns"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}