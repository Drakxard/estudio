{
  "appId": "com.mathstudy.app",
  "productName": "Mathematics Study Platform",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    "sube-seccion/**/*",
    "attached_assets/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.ico"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/assets/icon.icns"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}